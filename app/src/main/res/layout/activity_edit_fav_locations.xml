<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.politechnika.lukasz.views.activities.EditFavLocationsActivity"
    android:background="#323232">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp">
        <Button
            android:id="@+id/addNewLocationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add new location"
            android:textAllCaps="false"
            android:background="@drawable/side_nav_bar"
            android:layout_margin="10dp"/>

        <View
            android:id="@+id/firstViewSeparator"
            android:layout_below="@+id/addNewLocationButton"
            android:background="@android:color/darker_gray"
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp" />
        <ListView
            android:id="@+id/locationsListView"
            android:layout_below="@+id/firstViewSeparator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:background="@drawable/background_toolbar_translucent"/>

</RelativeLayout>
