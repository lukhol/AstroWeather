<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
    <corners
        android:radius="15dp"
        />
    <gradient
        android:angle="45"
        android:centerX="35%"
        android:centerColor="#A85400"
        android:startColor="#E8300C"
        android:endColor="#FF1900"
        android:type="linear"
        />
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp"
        />
    <size
        android:width="30dp"
        android:height="30dp"
        />
    <stroke
        android:width="1dp"
        android:color="#0A0808"
        />
</shape>